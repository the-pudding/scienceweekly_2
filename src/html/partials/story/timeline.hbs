<div class='timeline-box'>
    <div class='scroll-hint is-visible'>
      <p>Scroll</p>
      <img inline src='arrow-down.svg'>
    </div>
    <div class='timeline-svg-box'>
        <div class='arrow-intro-text-up hidden arrow-back-to-intro'>
          <div class='pulse-circle'></div>
          <div class='button-circle'>
            <img inline src='arrow-right.svg'>
          </div>
        </div>
        {{!-- <div class='arrow-up-svg'>
          <p>Return to Start</p>
                <div class='button-circle'>
                <img inline src='arrow-up.svg'>
            </div>
        </div> --}}
        <div class='tooltip hidden'>
            <div class='tooltip-close hidden'>X</div>
            <p class='sci-title'></p>
            <p class='sci-author'></p>
            <p class='sci-body'></p>
            <p class='sci-link hidden'>Open link</p>
        </div>
        <svg class='timeline-svg'></svg>
    </div>
</div>

<div class='end conclusion hidden'>
                {{#each doc.conclusion}}
                <p>{{{value}}}</p>
            {{/each}}
</div>
<div class='end method hidden'>
            {{#each doc.Method}}
                <p>{{{value}}}</p>
            {{/each}}
</div>

