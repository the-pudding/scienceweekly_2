/* CUSTOM STORY STYLE */

html
    background-color: $off-black
    //scroll-behavior smooth
#content
    background-color $off-black

.timeline-box
  padding 1rem 1rem 5rem 1rem

.timeline-intro
    position: absolute;
    width: 100%;
    height: 100vh;
    z-index: 1000;
    background: $off-black
    color #fff
    transform translateX(0)
    transform translateY(0)
    transition transform 200ms ease-in-out

    &.slide
      transform translateY(-150%)


.timeline-svg-box
    display: flex
    flex-direction: row
    justify-content: center

    .arrow-up-svg
      position fixed
      padding 1rem 0
      width 100%
      height 5.5rem
      background-color rgba($black, 0.4)
      display flex

      p
        margin 0
        font-family $sans
        set-type-size('x-small', true)
        text-transform uppercase
        color $off-white
        font-weight 700

      .button-circle
        background-color transparent
        border 1px solid $white
        width 2rem
        height 2rem
        margin-top 1.5rem

        &:hover
          background-color rgba($white, 0.2)

        svg
          stroke-width 1px

// .timeline-svg
    // display none

.tooltip
    position: absolute
    pointer-events: none
    background-color: $white
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    color $off-black
    padding 0 1em
    font-family: $sans
    p
        font-size 14px

.sci-title
    text-transform: uppercase


// .sci-author

.hidden
    display none

.month
    fill #FE5444
    opacity 0.2
    stroke #FE5444

.tick
    pointer-events: none
    text-anchor: end
    line
        opacity 0

.timeline-axis
    .domain
        visibility: hidden

.paper
    fill $red

.article
    fill $teal

.faded
  opacity 0.3

.highlight
  opacity 1
  stroke $white
  stroke-width 2px

.annotation-note-label
    fill #FFF

circle
    stroke #000
    cursor pointer
